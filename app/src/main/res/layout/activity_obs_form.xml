<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_text"
        style="@style/title_bar"
        android:text="Environmental Site Inspection Observation Form"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_screen">

    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Item"
                android:padding="5dp"
                android:id="@+id/textView2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Observation"
                android:padding="5dp"
                android:id="@+id/textView3"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recommendation"
                android:padding="5dp"
                android:id="@+id/textView4"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="To be remediated before"
                android:padding="5dp"
                android:id="@+id/textView5"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Follow-up Action"
                android:padding="5dp"
                android:id="@+id/textView6"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/obs_form_lv"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/back_btn"
                    style="@style/common_button_match_horizontal"
                    app:layout_widthPercent="50%"
                    android:text="Back"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:layout_centerHorizontal="true"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addphoto"
                    android:src="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/obs_image" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>